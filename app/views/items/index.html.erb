<h1 class="page-header">Menu Items</h1>

<% @items.each do |item| %>
<div class="item">
  <p><strong><%= link_to item.name, item %> - </strong>
  <%= "#{item.description}" %></p>
  <p>$ <%= "#{item.price}" %></p>
  <p>In Stock: <%= "#{item.in_stock}" %>
  <br><br>
<% end %>
<br>
<%= link_to "New Menu Item", new_item_path %>
