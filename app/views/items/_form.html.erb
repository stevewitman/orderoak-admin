<%= form_for @item, :html => {class: 'form-horizontal'} do |f| %>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :name, class: 'control-label' %>
    </div>
    <div class="col-sm-5">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :description, class: 'control-label' %>
    </div>
    <div class="col-sm-5">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :price, class: 'control-label' %>
    </div>
    <div class="col-sm-5">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :photo, class: 'control-label' %>
    </div>
    <div class="col-sm-5">
      <%= f.file_field :photo, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :in_stock, class: 'control-label' %>
    </div>
    <div class="col-sm-5">
      <%= f.check_box :in_stock, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
    </div>
    <div class="col-sm-5">
        <%= f.submit nil, class: 'btn btn-default btn-primary' %>
    </div>
  </div>
<% end %>
