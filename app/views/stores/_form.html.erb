<%= form_for @store, :html => {class: 'form-horizontal'} do |f| %>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :name, class: 'control-label' %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :address, class: 'control-label' %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :city, class: 'control-label' %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :state, class: 'control-label' %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :state, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :zip, class: 'control-label' %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :zip, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :phone, class: 'control-label' %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :website, class: 'control-label' %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :lat, class: 'control-label' %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :latitude, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.label :long, class: 'control-label' %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :longitude, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="col-sm-1">
      </div>
      <div class="col-sm-3 text-right">
        <% if @store.id %>
          <%= link_to "Cancel", store_path(@store), class: "btn btn-warning" %>&nbsp;&nbsp;&nbsp;
        <% else %>
          <%= link_to "Cancel", stores_path, class: "btn btn-warning" %>&nbsp;&nbsp;&nbsp;
        <% end %>
        <%= f.submit nil, class: 'btn btn-default btn-success' %>
      </div>
    </div>
  </div>

<% end %>
