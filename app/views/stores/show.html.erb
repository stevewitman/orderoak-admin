<%= page_header "#{@store.name} Menu" do %>
  <%= link_to "Back", stores_path(@store), class: "btn btn-default" %>
  <button class="btn btn-default" type="button" data-toggle="collapse" data-target="#store-details" aria-expanded="false" aria-controls="collapseExample">
    Show Store Details
  </button>
  <%= link_to "Add New Menu Item", new_store_menuitem_path(@store), class: "btn btn-default" %>
<% end %>

<div class="collapse" id="store-details">
  <div class="well">
    <address>
      <div class="pull-right">
        <%= link_to 'Edit Store Details', edit_store_path(@store), class: "btn btn-default" %>&nbsp;&nbsp;&nbsp;
        <button class="btn btn-default" type="button" data-toggle="collapse" data-target="#store-details" aria-expanded="false" aria-controls="store-details">
          X
        </button>
      </div>
      <strong><%= @store.name %></strong><br>
      <%= "#{@store.address}, #{@store.city}, #{@store.state} #{@store.zip}" %><br>
      <%= @store.phone %><br>
    </address>
    <address>
      <%= @store.url %><br>
      <%= "#{@store.latitude}, #{@store.longitude}" %><br>
    </address>
  </div>
</div>

<div class="row">
  <div class="col-sm-4">
    <% if @menugroups %>
      <% @menu.each do |group, items| %>
        <div class="panel panel-success">
          <div class="panel-heading text-center">
            <h3><%= group %></h3>
          </div>
          <div class="panel-body">
            <% items.each do |item| %>
               <p>
                 <span class="item-name"><%= link_to item.name, edit_store_menuitem_path(@store, item.id) %></span>
                 <span class="item-price"><%= link_to "$#{(item.price)/100}", edit_store_menuitem_path(@store, item.id) %></span><br>
                 <%= item.description %>
               </p>
             <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
